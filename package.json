{
  "name": "collectionswap",
  "version": "0.0.1",
  "scripts": {
    "compile": "hardhat compile",
    "coverage": "TESTING=true RUN_COVERAGE=true hardhat coverage",
    "format": "bash -c 'forge fmt contracts/{bonding-curves,filter,pools,rng,routers,tree,validators,vaults,lib/TransferLib.sol,test,trading-competition} $(find contracts -maxdepth 1 -type f)'",
    "gas": "RUN_GAS=true yarn test:hh",
    "test:foundry": "forge test",
    "test:hh": "TESTING=true hardhat test",
    "lint": "yarn lint:ci --fix",
    "lint:ci": "eslint scripts test hardhat.config.ts --ext .ts",
    "solhint": "solhint 'contracts/**/*.sol'",
    "deploy": "node scripts/noUnstagedChanges.js && hardhat clean && hardhat compile && hardhat deployCollectionSet",
    "verify": "hardhat verifyEtherscanCollectionSet",
    "verify:tenderly": "hardhat verifyTenderlyCollectionSet"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.5.1",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.7",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@pooltogether/pooltogether-rng-contracts": "^1.5.1",
    "@tenderly/hardhat-tenderly": "^1.4.1",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.11",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "chai": "^4.3.6",
    "dotenv": "^16.0.2",
    "eslint": "^8.22.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "hardhat": "^2.12.1-ir.0",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "@anders-t/ethers-ledger": "^1.0.4",
    "@manifoldxyz/royalty-registry-solidity": "^1.0.9",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@openzeppelin/merkle-tree": "^1.0.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.42.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.7.0",
    "fummpel": "^0.0.4",
    "solmate": "^6.5.0"
  }
}
